@font-face
  font-family "Nougat-ExtraBlack"
  src url("assets/fonts/Nougat-ExtraBlack.woff2") format("woff2")
  font-weight normal
  font-style normal

.box-default
    display table
    background-color #353b51
    border solid 1px #050713
    box-shadow 1px 1px 4px 0px rgba(5, 7, 19, 0.5)
    margin 5px
    transform skew(-5deg, 0deg)
    border-radius 5px

    &:before
        content ''
        display table
        width 100%
        height 3px
        background-color #6d6185
        border-radius 5px 5px 0 0

    &:after
        content ''
        display table
        width 100%
        height 3px
        background-color #242b3b
        border-radius 0 0 5px 5px

    &>span
        transform skew(5deg, 0deg)
        padding 2px 10px
        display table
