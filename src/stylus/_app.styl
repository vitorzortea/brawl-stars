#brawstars
    display table
    background-color #0245ba
    min-width 100%
    min-height 100vh
    position relative
    overflow hidden

    &>.main
        position relative
        z-index 2
        width: 100%
        min-height 99vh
        background-image -webkit-radial-gradient(center, ellipse cover, rgba(65,231,255,0.9) 0%, rgba(65,231,255,0) 60%)

    #bg-skull
        position absolute
        display table
        z-index 1
        min-width 100vw
        min-height 100vh
        width 100%
        height 100%
        top 0
        left 0
        animation  bg-skull 20s infinite cubic-bezier(0.30, 0.30, 0.60, 0.60)

        &:before,&:after
            content ''
            display table
            position absolute
            min-width 100vw
            min-height 100vh
            background-image url(assets/img/bg-skull.png)
            background-size auto 25%
            opacity 0.4

        &:before
            top 0
            left 0

        &:after
            top 100%
            left 0

@keyframes bg-skull
  0%
      transform translate(0, 0)
  100%
      transform translate(0, -100%)



