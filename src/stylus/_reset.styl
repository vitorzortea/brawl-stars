@import url('https://fonts.googleapis.com/css?family=Ubuntu:300,400,700&display=swap')
*
  box-sizing border-box
  margin 0
  padding 0
  border 0
  outline 0
  background transparent
  font-size 100%
  vertical-align baseline

html, body
  min-height 100vh
  background-color escala-cinza-1
  color escala-cinza-10
  font-size 16px
  font-family "Nougat-ExtraBlack"
  color white
  text-shadow: -1px -1px 0 #000, 2px -2px 0 #000, -2px 2px 0 #000, 1px 1px 0 #000;


ol, ul
  list-style none

img
  max-width 100%
  height auto

a
  color inherit
  text-decoration none

.text-opacity
  opacity 0.4

.positivo
  color #009d25

.negativo
  color #ff3548
