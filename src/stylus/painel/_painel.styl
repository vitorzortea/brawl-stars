#painel
    display table
    min-width 100%
    min-height 100vh
    display flex
    flex-direction column
    padding 20px

    .main-selectors
      display flex
      flex-wrap wrap
      width 100%
      align-items center
      flex auto

      .menu-left, .menu-right
        .box-default
          margin 30px 0
          display table
          min-width 115px

          span
            width 100%
            text-align center

            img
              max-height 5.35vh
              margin-top -20px
              margin-bottom -5px

          &:hover img
            transform scale(1.2)

      .menu-center
        min-height 100%
        display flex
        align-items center
        justify-content center
        flex-wrap wrap
        flex auto
        background-image -webkit-radial-gradient(center, ellipse cover, rgba(65,231,255,0.90) 0%,rgba(65,231,255,0) 60%)

        .rank
          display flex
          align-items center
          justify-content center
          padding 10px

          .level
            width 50px
            height 55px
            background-image url(assets/img/icones/class/icone2.png)
            background-size 100% 100%

            p
              padding-top 25px
              font-size 18px
              text-align center

          .bar
            background-image linear-gradient(to bottom, #430024 49%, #610035 50%)
            position relative
            height 35px
            min-width 100px
            border solid 2px black
            display flex
            align-items center
            justify-content center
            font-size 16px

            &:before
              content ''
              width 40%
              height 100%
              position absolute
              top 0
              left 0
              display table
              background linear-gradient(to bottom, #ed7425 49%, #d85c40 50%)

            &>span
              position relative
              z-index 2

              img
                height 1.5em
                display inline
                vertical-align middle

          .poder
            background-color black
            width 35px
            height 35px
            text-align center
            display flex
            align-items center
            justify-content center
            position relative

            &>p:first-child
              color #cbcbcb
              font-size 16px
              position absolute
              top 0
              left 50%
              transform translate(-50%, -50%)

            &>p:last-child
              font-size 20px

        .brawl-selected
          max-width 380px
          display table
          margin 0 auto
          position relative

          img
            max-height 50vh

          &:after
            content ''
            position absolute
            z-index 1
            bottom 0
            left 50%
            width 60%
            height 20px
            border-radius 50%
            background-color rgba(0,0,0,0.2)
            transform translate(-50%, 0)

          img
            position relative
            z-index 2


