footer
  display flex
  align-items center
  padding 10px 0

  &>div:first-child
    flex auto

.btn-boxes
  display inline-table
  margin 0 10px

  .box-default img
    max-width 140px
    transform scale(1) rotate(15deg)
    margin -40% 5px -10px
    transition 0.5s

  &:hover .box-default
    background-color #ecc508

    &:before
      background-color #f8eb44

    &:after
      background-color #a7552f

    img
      transform scale(1.2) rotate(5deg)

  .level-box
    display flex
    align-items center
    position relative
    z-index 2
    width 96%
    height 30px
    background-image linear-gradient(to bottom, #1f2438 49%, #283043 50%)
    margin -10px auto 0 0
    border solid 1px #07112a
    border-radius 0 0 10px 10px

    img
      position relative
      z-index 2
      height 40px
      margin -5px 0 -5px -10px

    p
      flex auto
      text-align center
      position relative
      z-index 2
      font-size 20px

    &:after
      content ''
      display table
      position absolute
      z-index 1
      top 0
      left 0
      width 66%
      height 100%
      background-image linear-gradient(to bottom, #00bbfe 49%, #2c7df3 50%)
